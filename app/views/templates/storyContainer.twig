<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<div class="show-story">
        <div class="image-container">
            <div class="story-details">
                <img class="story-img-inside" src="assets/profile/profile_burnerlee.jpg">
                <span>{{user.username}}</span>
                <i class="fa fa-close fa-lg close-story"></i>
            </div>
        </div>
        <div class="progress-line"></div>
        <div id="carouselExampleIndicators" class="carousel slide story-image" data-interval="false"
            data-ride="carousel">
            <ol class="carousel-indicators">
            {% for item in items %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{item.index_row}}" {% if (item.index_row==0) %}class="active"{% endif %}></li>
            {% endfor %}
            </ol>
            <div class="carousel-inner">
            {% for item in items %}
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{item.img}}">
                </div>
            {% endfor %}
                </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>